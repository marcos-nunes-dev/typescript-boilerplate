{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "esnext",
    "target": "es5",
    "baseUrl": "./src",
    "lib": ["es6", "dom", "dom.iterable", "esnext"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "rootDir": ".",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true
  },
  "types": ["typePatches"],
  "include": ["react-env.d.ts", "**/*.ts", "**/*.tsx", "tests/header.test.js", "tests/header.test.js"],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "config",
    "src/serviceWorker.ts"
  ]
}
